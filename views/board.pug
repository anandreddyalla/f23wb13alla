extends layout

block content
  h1= title
  p Welcome to the Board Display page.
  p Rows: #{query.rows}
  p Cols: #{query.cols}

  - let rows = parseInt(query.rows);
  - let cols = parseInt(query.cols);

  if (Number.isNaN(rows) || Number.isNaN(cols) || rows < 1 || cols < 1 || rows > 10 || cols > 10)
    p Invalid input. Please provide valid rows and cols values between 1 and 10.
  else
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            - let value = (i === j) ? 1 : (i === j + 1) ? 2 : (i === j - 1) ? i : 0
            td= value